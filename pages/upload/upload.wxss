/**upload.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f4f6f9;
}

.page {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
}

/* ── Step indicator ── */
.steps {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-bottom: 80rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.step-circle {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  background-color: #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s;
}

.step.active .step-circle {
  background-color: #07c160;
}

.step.done .step-circle {
  background-color: #07c160;
}

.step-num {
  font-size: 24rpx;
  font-weight: 700;
  color: #9ca3af;
}

.step.active .step-num,
.step.done .step-num {
  color: #ffffff;
}

.step-check {
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
}

.step-label {
  font-size: 22rpx;
  color: #9ca3af;
}

.step.active .step-label {
  color: #07c160;
  font-weight: 600;
}

.step-line {
  flex: 1;
  height: 4rpx;
  background-color: #e5e7eb;
  margin: 0 8rpx;
  margin-bottom: 28rpx;
  border-radius: 2rpx;
  transition: background-color 0.3s;
}

.step-line.active {
  background-color: #07c160;
}

/* ── Main status area ── */
.status-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  gap: 40rpx;
}

/* Spinner */
.spinner-wrap {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.spinner-ring {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 8rpx solid #e8f5e9;
  border-top-color: #07c160;
  animation: spin 1s linear infinite;
}

.spinner-inner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: rgba(7, 193, 96, 0.4);
  animation: spin 1.5s linear infinite reverse;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Result icons */
.result-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.success-icon {
  background-color: #07c160;
}

.error-icon {
  background-color: #e74c3c;
}

.result-check,
.result-x {
  font-size: 52rpx;
  color: #ffffff;
  font-weight: 700;
}

/* Status text */
.status-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a2a;
  text-align: center;
}

/* Progress bar */
.progress-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.progress-track {
  width: 100%;
  height: 8rpx;
  background-color: #e5e7eb;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #07c160;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-pct {
  font-size: 24rpx;
  color: #6b7280;
}

/* Hint text */
.hint-text {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.7;
  padding: 0 20rpx;
}

/* ── Action buttons ── */
.action-wrap {
  width: 100%;
  padding-bottom: env(safe-area-inset-bottom);
}

.btn-primary {
  width: 100%;
  height: 96rpx;
  line-height: normal;
  background-color: #07c160;
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  border: none;
  letter-spacing: 2rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary:active {
  background-color: #06ad56;
}
