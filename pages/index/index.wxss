/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.welcome {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.btn-primary {
  width: 500rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #07c160;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
}

.btn-primary:active {
  background-color: #06ad56;
}

.btn-secondary {
  width: 500rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  color: #333;
  border: 2rpx solid #ddd;
  border-radius: 45rpx;
  font-size: 32rpx;
  text-align: center;
  margin-top: 30rpx;
}

.btn-secondary:active {
  background-color: #f5f5f5;
}
