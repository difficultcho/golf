/**index.wxss**/

/* ── Page shell ── */
page {
  height: 100vh;
  background-color: #f4f6f9;
}

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f4f6f9;
}

/* ── HOME TAB ── */
.home-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* Brand header */
.brand-header {
  background-color: #0a2540;
  padding-bottom: 32rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 24rpx;
}

.brand-logo-mark {
  width: 72rpx;
  height: 72rpx;
  background-color: #07c160;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 900;
  color: #fff;
  flex-shrink: 0;
}

.brand-text-wrap {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.brand-name {
  font-size: 38rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.brand-ai {
  color: #07c160;
}

.brand-tagline {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  letter-spacing: 1rpx;
}

/* Section header */
.section-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 40rpx 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1a1a2a;
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

.section-count {
  font-size: 24rpx;
  color: #9ca3af;
}

/* History scroll */
.history-scroll {
  flex: 1;
  overflow: hidden;
}

/* Empty state */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 60rpx 40rpx;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.7;
}

/* Login prompt (home tab, not logged in) */
.login-prompt {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 60rpx;
}

.btn-login {
  margin-top: 48rpx;
  width: 400rpx;
  height: 96rpx;
  line-height: normal;
  background-color: #07c160;
  color: #ffffff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-login:active {
  background-color: #06ad56;
}

/* Login button (profile tab, smaller) */
.btn-login-small {
  margin-top: 16rpx;
  width: 240rpx;
  height: 72rpx;
  line-height: normal;
  background-color: #07c160;
  color: #ffffff;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-login-small:active {
  background-color: #06ad56;
}

/* Role badge */
.profile-role {
  font-size: 22rpx;
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.15);
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

/* History card */
.history-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  margin: 0 30rpx 20rpx;
  border-radius: 20rpx;
  padding: 28rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  gap: 24rpx;
}

.history-card:active {
  opacity: 0.75;
}

.card-index-wrap {
  width: 52rpx;
  height: 52rpx;
  background-color: #f0faf4;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.card-index {
  font-size: 24rpx;
  font-weight: 700;
  color: #07c160;
}

.card-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-date {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a2a;
}

.card-metrics {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.card-metric {
  font-size: 24rpx;
  color: #6b7280;
}

.card-sep {
  font-size: 24rpx;
  color: #d1d5db;
}

.card-no-data {
  color: #d1d5db;
}

.card-arrow {
  font-size: 36rpx;
  color: #d1d5db;
  flex-shrink: 0;
}

/* Action bar */
.action-bar {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
}

.btn-record {
  flex: 1;
  height: 96rpx;
  line-height: normal;
  background-color: #07c160;
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  border: none;
  letter-spacing: 2rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-record:active {
  background-color: #06ad56;
}

.btn-album {
  flex: 1;
  height: 96rpx;
  line-height: normal;
  background-color: #ffffff;
  color: #374151;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  border: 2rpx solid #e5e7eb;
  letter-spacing: 2rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-album:active {
  background-color: #f9fafb;
}

/* ── PROFILE TAB ── */
.profile-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.profile-hero {
  background-color: #0a2540;
  padding-bottom: 48rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  background-color: #07c160;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.avatar-text {
  font-size: 52rpx;
  font-weight: 900;
  color: #ffffff;
}

.profile-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 24rpx;
}

.profile-stat-row {
  display: flex;
  flex-direction: row;
  gap: 60rpx;
}

.profile-stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.stat-num {
  font-size: 44rpx;
  font-weight: 700;
  color: #07c160;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

.profile-scroll {
  flex: 1;
  overflow: hidden;
}

/* Settings */
.settings-group {
  background-color: #ffffff;
  margin: 30rpx 30rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
}

.settings-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 32rpx;
}

.settings-row:active {
  background-color: #f9fafb;
}

.row-divider {
  height: 1rpx;
  background-color: #f3f4f6;
  margin: 0 32rpx;
}

.row-label {
  font-size: 30rpx;
  color: #1a1a2a;
}

.row-label.danger {
  color: #e74c3c;
}

.row-arrow {
  font-size: 36rpx;
  color: #d1d5db;
}

.version-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  gap: 12rpx;
}

.version-text {
  font-size: 26rpx;
  color: #9ca3af;
  font-weight: 500;
}

.version-sub {
  font-size: 22rpx;
  color: #d1d5db;
}

/* ── BOTTOM TAB BAR ── */
.bottom-tabs {
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  padding-bottom: env(safe-area-inset-bottom);
}

.bottom-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0 20rpx;
  gap: 6rpx;
}

.tab-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: transparent;
  margin-bottom: 4rpx;
}

.tab-dot.visible {
  background-color: #07c160;
}

.tab-label {
  font-size: 22rpx;
  color: #9ca3af;
  letter-spacing: 1rpx;
}

.bottom-tab.active .tab-label {
  color: #07c160;
  font-weight: 600;
}
