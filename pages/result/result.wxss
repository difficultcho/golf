/**result.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
}

.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  padding: 40rpx 0;
  box-sizing: border-box;
}

.video-container {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  position: relative;
}

.result-video {
  width: 100%;
  height: 50vh;
  background-color: #000;
}

.video-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.video-error {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(255, 255, 255, 0.95);
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  max-width: 80%;
  text-align: center;
}

.error-text {
  display: block;
  color: #e74c3c;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.error-hint {
  display: block;
  color: #666;
  font-size: 24rpx;
  line-height: 1.5;
}

/* Tab bar */
.tab-bar {
  display: flex;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #999;
  position: relative;
}

.tab-item.active {
  color: #07c160;
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* Tab content */
.tab-content {
  width: 100%;
  flex: 1;
}

/* Analysis section */
.analysis {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.metric-cards {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.metric-card {
  flex: 1;
  min-width: 40%;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.metric-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
  line-height: 1.2;
}

.metric-unit {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.metric-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 12rpx;
}

/* Metadata section */
.metadata {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.meta-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.meta-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.meta-label {
  font-size: 28rpx;
  color: #666;
}

.meta-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* Chart styles */
.chart-section {
  padding: 0 30rpx;
}

.chart-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
}

.chart-container {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.radar-canvas {
  width: 100%;
  height: 500rpx;
}

.bar-canvas {
  width: 100%;
  height: 300rpx;
}

.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* AI Suggestions */
.suggestions {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.suggestions-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #1a1a2a;
  letter-spacing: 1rpx;
  margin-bottom: 20rpx;
  text-transform: uppercase;
}

.suggestion-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.suggestion-item.good {
  background-color: #f0faf4;
}

.suggestion-item.warn {
  background-color: #fff8f0;
}

.suggestion-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
  margin-top: 8rpx;
}

.suggestion-item.good .suggestion-dot {
  background-color: #07c160;
}

.suggestion-item.warn .suggestion-dot {
  background-color: #f59e0b;
}

.suggestion-text {
  flex: 1;
  font-size: 26rpx;
  color: #374151;
  line-height: 1.6;
}

/* Action buttons */
.actions {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: auto;
}

.btn-secondary {
  width: 100%;
  height: 90rpx;
  line-height: normal;
  background-color: #fff;
  color: #333;
  border: 2rpx solid #ddd;
  border-radius: 45rpx;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-secondary:active {
  background-color: #f5f5f5;
}

.btn-primary {
  width: 100%;
  height: 90rpx;
  line-height: normal;
  background-color: #07c160;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
  margin-top: 20rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary:active {
  background-color: #06ad56;
}
