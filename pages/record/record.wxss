/**record.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #000;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0;
  box-sizing: border-box;
}

.camera {
  width: 100%;
  height: 60vh;
  background-color: #000;
}

.video-preview {
  width: 100%;
  height: 60vh;
}

.controls {
  width: 100%;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.btn-record {
  width: 100%;
  height: 100rpx;
  line-height: normal;
  background-color: #ff4444;
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  text-align: center;
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-record:active {
  background-color: #dd3333;
}

.recording-controls {
  width: 100%;
  text-align: center;
}

.timer {
  display: block;
  font-size: 48rpx;
  color: #ff4444;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.btn-stop {
  width: 100%;
  height: 100rpx;
  line-height: normal;
  background-color: #666;
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  text-align: center;
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-stop:active {
  background-color: #555;
}

.action-buttons {
  width: 100%;
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
}

.btn-secondary {
  flex: 1;
  height: 90rpx;
  line-height: normal;
  background-color: #fff;
  color: #333;
  border: 2rpx solid #ddd;
  border-radius: 45rpx;
  font-size: 32rpx;
  text-align: center;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-secondary:active {
  background-color: #f5f5f5;
}

.btn-primary {
  flex: 1;
  height: 90rpx;
  line-height: normal;
  background-color: #07c160;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary:active {
  background-color: #06ad56;
}
